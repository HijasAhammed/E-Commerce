<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title style="position: fixed;">Checkout</title>
    <link rel="stylesheet" href="/css/userside/checkout.css">
</head>
<body>
    <h2>Shipping Address</h2>
    <div>
        <form id="addressForm">
            <!-- <label for="fullName">Full Name:</label> -->
            <input type="text" id="fullName" name="fullName" required><br>

            <button type="submit">Confirm Address</button>
        </form>
    </div>

    <!-- Payment Method Selection -->
    <h2>Select Payment Method</h2>
    <div>
        <input type="radio" id="onlinePayment" name="paymentMethod" value="online">
        <label for="onlinePayment">Online Payment</label><br>

        <input type="radio" id="cashOnDelivery" name="paymentMethod" value="cash">
        <label for="cashOnDelivery">Cash on Delivery</label><br>
    </div>

    <!-- Product Details Summary -->
    <h2>Order Summary</h2>
    <div id="productDetails">
        <!-- Product details will be populated here -->
    </div>

    <h3>Total Price: <span id="totalPrice">$0.00</span></h3>

    <!-- Submit Button -->
    <button id="placeOrderBtn">Continue</button>

    <!-- Include any necessary JavaScript -->
    <script>
        // JavaScript code to handle form submission, validate inputs, calculate totals, etc.
        document.getElementById('addressForm').addEventListener('submit', function(event) {
            event.preventDefault();
            // Handle address form submission, e.g., send the address details to the server
        });

        document.getElementById('placeOrderBtn').addEventListener('click', function() {
            // Handle place order button click event, e.g., validate inputs and submit the order
        });
    </script>
</body>
</html>
