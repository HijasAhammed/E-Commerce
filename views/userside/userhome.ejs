                    <use xlink:href="../images/sprite.svg#icon-search"></use>
                  </svg>
                </a>
  
                <a href="#" class="icon__item">
                  <svg>
                    <use xlink:href="../images/sprite.svg#icon-user"></use>
                  </svg>
                </a>
  
                <a href="addToCart.html" class="icon__item">
                  <svg>
                    <use xlink:href="../images/sprite.svg#icon-shopping-basket"></use>
                  </svg>
                  <span>2</span>
                </a>
              </ul>
            </div>
          </nav>
        </div>
      </div>
  
      <!-- Hero -->
      <% bannerscheme.forEach((data)=>{ %>
      <div class="hero">
        <img src="/banner/<%= data.Image %>" alt="">
          <div class="hero__content container">
           
            <h1>
              <span style="color: rgb(253, 211, 0);">Get <span class="color">50%</span> off your first shopping
                with</span>
              <span style="color: rgb(253, 211, 0);">Li<span class="color">Ya</span> online shop</span>
            </h1>
            <!-- <a href="#" class="btn btn-hero">shop now</a> -->
          </div>
         
        <a href="#new__arrival" class="goto__next scroll-link">
          <span>
            <svg>
              <use xlink:href="../images/sprite.svg#icon-angle-down"></use>
            </svg>
          </span>
        </a>
      </div>
      <% }) %>
    
    </header>
  
    <!-- Main -->
    <main>
      <!-- Special Offer Banner -->
      <section class="section special__offer">
        <div class="offer__container">
          <h1>SPECIAL OFFER</h1>
          <p>Special Offer Discount valid for Only this Week</p>
          <a href="#">SHOP NOW</a>
        </div>
      </section>
  
      <!-- Featured Section -->
     
      <section class="section featured" id="featured">
        <div> 
         
            <div class="featured__container container">
              <div class="title">
                <h1 class="primary__title">Featured Products</h1>
              </div>
              <div class="featured__center">
                <% addproducts.forEach((addpr)=>{ %>
                  <div class="product" onclick="window.location.href='/user/productdetails/?id=<%=addpr._id%>'">
                    <div class="img__container">
                      <img src="/asset/<%=addpr.productimg[0] %>" alt="" />
                    </div>
                    <div class="product__bottom">
                      <div class="rating">
                        <span>
                          <svg>
                            <use xlink:href="../images/sprite.svg#icon-star-full"></use>
                          </svg>
                        </span>
                        <span>
                          <svg>
                            <use xlink:href="../images/sprite.svg#icon-star-full"></use>
                          </svg>
                        </span>
