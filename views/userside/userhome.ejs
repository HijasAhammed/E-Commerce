<body>
  <form action="/user">
    <header id="header" class="header">
      <div class="navigation">
        <div class="container">
          <nav class="nav__center">
            <div class="nav__header">
              <div class="nav__logo">
                <a href="index.html">
                  <h1>Li<span>Ya</span></h1>
                </a>
              </div>
  
              <div class="nav__hamburger">
                <span>
                  <svg>
                    <use xlink:href="../images/sprite.svg#icon-menu"></use>
                  </svg>
                </span>
              </div>
            </div>
  
            <div class="nav__menu">
              <div class="menu__top">
                <h1 class="nav__category">NR<span>G</span></h1>
                <div class="close__toggle">
                  <svg>
                    <use xlink:href="../images/sprite.svg#icon-cross"></use>
                  </svg>
                </div>
              </div>
              <ul class="nav__list">
                <li class="nav__item">
                  <a href="#header" class="nav__link scroll-link">Home</a>
                </li>
  
                <li class="nav__item">
                  <a href="#featured" class="nav__link scroll-link">Featured</a>
                </li>
  
                <li class="nav__item">
                  <a href="#blog" class="nav__link scroll-link">Blog</a>
                </li>
  
                <li class="nav__item">
                  <a href="#newsletter" class="nav__link scroll-link">Subscribe</a>
                </li>
  
                <li class="nav__item">
                  <a href="/" class="nav__link">Login</a>
                  <a href="/signup" class="nav__link">signup</a>
                </li>
              </ul>
  
