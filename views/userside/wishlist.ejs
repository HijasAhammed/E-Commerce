<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wishlist</title>
    <!-- Add your CSS stylesheets here -->
    <link rel="stylesheet" href="/css/userside/wishlist.css">
</head>
<body>
    <header>
        <h1>My Wishlist</h1>
    </header>

    <main>
        <div class="wishlist-container">
            <% data[0].newdata.forEach((wish,i)=> {%>
             <div class="product-card">
                <img src="/asset/<%=wish.productimg %>" alt="Product Image">
                <h1><%=wish.ProductName %></h1>
                <p><%=wish.Description %></p>
                <h4>Price:<%=wish.Price %></h4>
                <button onclick="removeFromWishlist(productId)">Remove from Wishlist</button>
            </div>
            <% }) %>
            <!-- Repeat the above product card for each product in the wishlist -->
        </div>
    </main>

</body>
</html>
