<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Liya Orderlist</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/userside/orderlist.css" />
  </head>
  <body>
    <main>
      <div class="container-fluid main">
        <div class="row mainContainer">
          <div class="col-12">
            <div class="cartHead">
              <div class="d-flex align-items-center gap-2">
                <h2 class="m-0 p-0">Orders</h2>
              </div>
            </div>
            <div class="cartBody d-flex">
              <div class="col-12 oneSection">
                <% orders.forEach(order=> { %>
                <div class="cartItems d-flex w-100 justify-content-between align-items-center">
                  <div class="d-flex align-items-center gap-3">
                    <div class="textOrder d-flex flex-column gap-2">
                      <img src="/asset/<%= order.products[0].id.productimg %>" width="70px" height="70px"> 
                      <h2 class="m-0"><%= order.products[0].id.ProductName %></h2>
                      <p class="m-0">Qty: <%= order.products[0].quantity %></p>
                    </div>
                  </div>
                  <div>
                    <div class="d-flex align-items-center gap-2 prices">
                      <div class="lPrice marginRes">
                        <p class="m-0">â‚¹<%= order.products[0].id.Price %></p>
                      </div>
                      <div class="d-flex align-items-center gap-2">
                        <p class="statusOrder me-3"><%= order.Status %></p>
                      </div>
                        <button onclick="location.href = '/user/cancelorder/<%= order._id %>' " style="background-color: brown; color: antiquewhite;" ><%= order.status == 'cancelled' ? 'cancelled' : 'cancell' %></button>
                      <a href="/user/ordersummary?orderId=<%= order._id %>">
                        <div class="details">Details</div>
                      </a>  
                    </div>
                  </div>
                </div>
                <% }); %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
 </body>
</html>